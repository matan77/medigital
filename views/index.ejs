<%- include('./components/header')%>

    <body>

        <%- include('./components/navigation')%>



            <div class="container" style="margin-top: 30px;">


                <div class="row">

                    <div class="col-lg-3">
                        <h3>Add category</h3>

                        <form id="add_category_form" method="post" action="/functions/add_category">
                            <label class="form-label">Category name</label>
                            <input type="text" name="categoryName" class="form-control">

                            <label class="form-label">Category image</label>
                            <input type="text" name="categoryImage" class="form-control">

                            <button form="add_category_form" type="submit" class="btn btn-primary"
                                style="width: 100%; margin-top: 12px;">Create New Category</button>
                        </form>

                    </div>

                    <div class="col-lg-9">

                        <%if(categories.length> 0){%>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Category Image</th>
                                        <th>Category Name</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%for(let category of categories){%>
                                        <tr>
                                            <td>
                                                <%= category.id%>
                                            </td>
                                            <td><img src="<%= category.categoryImage%>" style="width:100px" /></td>
                                            <td>
                                                <%= category.categoryName%>
                                            </td>
                                            <td>
                                                <a class="btn btn-info" href="/products/<%= category.id%>">
                                                    Products
                                                </a>
                                                <form style="display: inline;" id="delete_category<%= category.id %>"
                                                    method="post" action="/functions/delete_category/<%= category.id %>">
                                                    <button form="delete_category<%= category.id %>" type="submit"
                                                        class="btn btn-danger">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <%}%>

                                </tbody>
                            </table>
                            <%} else {%>
                                <p>No data for you</p>
                                <%}%>

                    </div>

                </div>


            </div>

            <%- include('./components/footer')%>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                    crossorigin="anonymous"></script>
    </body>

    </html>